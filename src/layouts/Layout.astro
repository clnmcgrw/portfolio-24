---
type Props = {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link href="https://use.typekit.net/vxv0xqr.css" rel="stylesheet" />
	</head>
	<body>
		<main role="main" class="cm-main">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	:root {
		--color-light: #f1faee;
		--color-white: #ffffff;
		--color-dark: #1d3557;
		--color-dark-alpha: rgba(29, 53, 87, 0.05);
		--color-primary: #e63946;
		--color-primary-alpha: rgba(230, 57, 70, 0.3);
		--color-secondary: #457b9d;

		--font-family-heading: minion-3-display, serif;
		--font-family-body: halyard-text, system-ui, sans-serif;
		--line-height-body: 1.55;

		--border-radius: 0.5rem;
	}
	html {
		font-family: var(--font-family-body);
		background: var(--color-light);
		color: var(--color-dark);
	}
	body {
		padding: 0;
		margin: 0;
		line-height: var(--line-height-body);
		font-size: 16px;
	}
	h1, h2, h3, h4, h5, h6 {
		margin: 0 0 0.5rem;
		line-height: 1;
		font-weight: bold;
		font-family: var(--font-family-heading);
	}
	h1 {
		font-size: 2.3rem;
	}
	h3 {
		font-size: 1.3rem;
		margin: 0 0 1rem;
	}
	h4 {
		font-family: var(--font-family-body);
		font-size: 1.1rem;
	}
	h5 {
		font-style: italic;
		font-size: 1.1rem;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
	}
	figure {
		margin: 0;
	}
	ul {
		padding-left: 1.25rem;
	}
	a {
		position: relative;
		display: inline-block;
		white-space: nowrap;
		font-weight: bold;
		text-decoration: none;
		color: var(--color-secondary);
		transition: color 0.35s ease;

		&:after {
			content: '';
			display: block;
			position: absolute;
			bottom: 1px;
			left: 0;
			width: 100%;
			height: 2px;
			opacity: 0.3;
			background-color: var(--color-secondary);
		}

		&:hover {
			color: var(--color-primary);
		}
	}
</style>
